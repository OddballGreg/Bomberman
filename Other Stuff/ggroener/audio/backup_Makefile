CC?=gcc -Wall -Wextra -Werror
LDLIBS?=-lopenal
ifeq ($(LIBAUDIO),1)
CFLAGS+=-DLIBAUDIO
LDLIBS+=-laudio
else
CFLAGS+= -I ~/.brew/Cellar/openal-soft/1.18.1/include/AL/
LDLIBS+=-lalut -L ~/.brew/Cellar/openal-soft/1.18.1/lib/
endif

APP:=openal-example
OBJS:= $(APP).o

all: $(APP)

%.o: %c
	$(CC) $(CFLAGS) -c $< -o $@

$(APP): $(OBJS)
	$(CC) $(OBJS) -o $@ $(LDLIBS)

clean:
	-rm -f $(OBJS) $(APP)
